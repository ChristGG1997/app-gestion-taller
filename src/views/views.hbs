<div class="container">
    <h1 class="text-center m-5">VIEWS</h1>
    <div class="row">
        {{#each register}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{codigoTrabajo}} <a href="/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p class="font-weight-bold">{{horasReg}} Horas Reglamentadas</p>
                    <p>{{descripcion}}</p>
                    <div class="d-flex">
                        <button class="btn btn-info m-2">Completada</button>
                        <form action="/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger m-2" type="submit">Borrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">No hay trabajos pendientes</p>
                <a href="/register" class="btn btn-success btn-block">Agregar</a>
            </div>
        </div>


        {{/each}}
    </div>
</div>